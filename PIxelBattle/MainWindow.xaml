<Window x:Class="PIxelBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIxelBattle" d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--<Style.Triggers>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property = "Background" Value="{Binding SelectedColor}"/>
                </Trigger>
            </Style.Triggers>-->
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1050"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Column="1"
            Orientation="Horizontal"
            Margin="30 35 0 0">
            <StackPanel>
                <Button
                Name="b0"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b0_Click">
                </Button>
                <Button
                Name="b1"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b1_Click_1">
                </Button>
                <Button
                Name="b2"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b2_Click">
                </Button>
                <Button
                    Name="b3"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                    Click="b3_Click">
                </Button>
                <Button
                    Name="b4"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b4_Click"/>
                <Button
                    Name="b5"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b5_Click"/>
                <Button
                    Name="b6"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b6_Click"/>
                <Button
                    Name="b7"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b7_Click"/>
                <Button
                    Name="b8"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b8_Click"/>
                <Button
                    Name="b9"
                Height="100"
                Width="100"
                Margin="0 0 0 0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="b9_Click"/>
            </StackPanel>
            
        </StackPanel>
        
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Top">
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 50 60 0"
                Background="Red"
                Command="{Binding ChangeColor}"
                CommandParameter="Red"
                />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Orange"
                Command="{Binding ChangeColor}"
                CommandParameter="Orange"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Yellow"
                Command="{Binding ChangeColor}"
                CommandParameter="Yellow"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Green"
                Command="{Binding ChangeColor}"
                CommandParameter="Green"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="LightBlue"
                Command="{Binding ChangeColor}"
                CommandParameter="LightBlue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Blue"
                Command="{Binding ChangeColor}"
                CommandParameter="Blue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Purple"
                Command="{Binding ChangeColor}"
                CommandParameter="Purple"
            />
        </StackPanel>
    </Grid>
</Window>
