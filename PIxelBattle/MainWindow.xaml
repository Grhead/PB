        </Style>
    </Window.Resources>-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1050"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Column="1"
            Orientation="Horizontal"
            Margin="30 35 0 0">
            <StackPanel>
                <Button
                Name="b0"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                Command="{Binding SetColor}"
                CommandParameter="A1"
                Background="{Binding A1}">
                </Button>
                <Button
                Name="b1"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                Command="{Binding SetColor}"
                CommandParameter="A2"
                Background="{Binding A2}">
                </Button>
                <Button
                Name="b2"
                Height="100"
                Width="100"
                BorderBrush="Black"
                BorderThickness="2"
                    Command="{Binding SetColor}"
                CommandParameter="A3">
                </Button>
                
            </StackPanel>
            
        </StackPanel>
        
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Top">
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 50 60 0"
                Background="Red"
                Command="{Binding ChangeColor}"
                CommandParameter="Red"
                />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Orange"
                Command="{Binding ChangeColor}"
                CommandParameter="Orange"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Yellow"
                Command="{Binding ChangeColor}"
                CommandParameter="Yellow"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Green"
                Command="{Binding ChangeColor}"
                CommandParameter="Green"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="LightBlue"
                Command="{Binding ChangeColor}"
                CommandParameter="LightBlue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Blue"
                Command="{Binding ChangeColor}"
                CommandParameter="Blue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Purple"
                Command="{Binding ChangeColor}"
                CommandParameter="Purple"
            />
        </StackPanel>
    </Grid>
</Window>
