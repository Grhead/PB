<Window x:Class="PIxelBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIxelBattle" d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid
            x:Name="DataTable"
            SelectionUnit="Cell"
            ItemsSource = "{Binding DataSet, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding CurrentCell}"
            Grid.Column="1"
            Grid.Row="0"
            MinColumnWidth="94"
            MinRowHeight="104"
            Height="958"
            Width="950"
            SelectionMode="Single"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            CanUserResizeColumns="False"
            CanUserReorderColumns="False"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="MistyRose"
            BorderThickness="2"
            HeadersVisibility="None">
        </DataGrid>
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Top">
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 50 60 0"
                Background="Red"
                Command="{Binding ChangeColor}"
                Click="Button_Click"
                CommandParameter="Red"
                />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Orange"

            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Yellow"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Green"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="LightBlue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Blue"
            />
            <Button
                Height="100"
                Width="100"
                HorizontalAlignment="Right"
                Margin="0 40 60 0"
                Background="Purple"
            />
        </StackPanel>
    </Grid>
</Window>
